<%- include('../partials/header') %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h2>WECLCOME TO YelpCamp</h2>
            <p>View the most beautiful and selected camps around the world in one click! </p>
            <p>
                <a class="btn btn-primary btn-large" href="/campground/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row" style="display:flex; flex-wrap: wrap;">
            <% camp.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src = "<%= camp.img %>" >
                    </div>
                    <div class="caption">
                        <h5><%= camp.name %></h5>
                    </div>
                    <p>
                        <a href="/campground/<%= camp._id %> " class="btn btn-primary">MORE INFO</a>
                    </p>
                       
                </div>  
            <% }); %>  
    </div>

</div>

<%- include('../partials/footer') %>