<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Hi there, please add a new campground!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campground" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name of camp">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" placeholder="Paste URL of image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                </div>

            </form>
            <a href="/campground">Go Back</a>
        </div>
        

    </div>
</div>

<%- include('../partials/footer') %>